public static void main(String[] args) {
        System.out.println("Cinema:");
        System.out.println("  1 2 3 4 5 6 7 8");

        for (int i = 1; i < 8; i++) {
            System.out.printf("%d S S S S S S S S\n", i);
        }
        Scanner scanner = new Scanner(System.in);
        int totalTicketPrice;
        System.out.println("Enter the number of rows:");
        int rows = scanner.nextInt();
        System.out.println("Enter the number of seats in each row:");
        int seats = scanner.nextInt();
        int seatsNumber = rows * seats;
        int frontRowsTotalPrice;
        int backRowsTotalPrice;

        if (seatsNumber <= 60)
        {
            totalTicketPrice = seatsNumber * 10;
            System.out.println("Total income:\n$"+totalTicketPrice);
        }

        if (seatsNumber > 60 && rows%2==0)
        {
           frontRowsTotalPrice = (rows/2) * seats * 10;
           backRowsTotalPrice =  (seatsNumber/2) * 8;
           totalTicketPrice = frontRowsTotalPrice + backRowsTotalPrice;
            System.out.println("Total income:\n$"+totalTicketPrice);
        }
        if (seatsNumber > 60 && rows%2!=0)
        {
            frontRowsTotalPrice = (rows/2 * seats) * 10;
            int rowsNumberRemainder = rows%2;
            backRowsTotalPrice = ((rows/2 + rowsNumberRemainder) * seats) * 8;
            totalTicketPrice = frontRowsTotalPrice + backRowsTotalPrice;
            System.out.println("Total income:\n$"+totalTicketPrice);
        }
        for (int i = 0; i < 5; i++) {
            System.out.println(i);
            if (i < 3) {
                continue;
            } else {
                for (int j = 0; j < 5; j++) {
                    System.out.println(j);
                }
            }
        }
    }
